<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavPetsActivity">

    <include android:id="@+id/miActionBar"
        layout="@layout/actionbar" />

    <TextView
        android:id="@+id/textFavPets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/miActionBar"
        android:layout_marginStart="@dimen/cv_margin"
        android:layout_marginTop="@dimen/cv_margin"
        android:layout_marginEnd="@dimen/cv_margin"
        android:layout_marginBottom="@dimen/cv_margin"
        android:text="@string/instrucciones2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv2_perritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textFavPets"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miActionBar"
        app:layout_constraintVertical_bias="0.107" />

    <!--Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/miActionBar" />
    -->



</RelativeLayout>